<!DOCTYPE html>
<html lang="en">

<head>
    <% include ./partials/head %>
    <link rel="stylesheet" href="/stylesheets/c3.min.css">
</head>

<body>
    <% include ./partials/header %>
    <section class="section">
        <div class="container">
        <h1 class="subtitle">Problem</h1>
            <table class="table is-hoverable is-fullwidth">
                <thead>
                  <tr>
                    <th>Unit Cost</th>
                    <th>Setup Cost</th>
                    <th>Holding Cost</th>
                    <th>N of Periods</th>
                    <th>Inventory Initial</th>
                    <th>Demands</th>
                  </tr>
                </thead>
                <tbody>
                    <tr>
                        <th><%= result.dat.p %></th>
                        <th><%= result.dat.q %></th>
                        <th><%= result.dat.hcost %></th>
                        <th><%= result.dat.NT %></th>
                        <th><%= result.dat.sInit %></th>
                        <th><%= result.djString %></th>
                    </tr>
                </tbody>
              </table>
            </div>
          </section>

          <section class="section">
                <div class="container">
                  <h1 class="subtitle"><%= result.objectiveFunction %></h1>
                    <table class="table is-hoverable is-fullwidth">
                        <thead>
                          <tr>
                            <th>Time Period</th>
                            <th>Production Batch Size</th>
                            <th>Production Set-up</th>
                            <th>End Inventory Level</th>
                          </tr>
                        </thead>
                        <tbody>
                            <% for(var i=0; i<result.solution.length-3; i=i+4) { %>     
                           <tr>
                            <th><%= result.solution[i] %></th>
                            <th class="production"><%= result.solution[i+1] %></th>
                            <th><%= result.solution[i+2] %></th>
                            <th class="inventory"><%= result.solution[i+3] %></th>
                          </tr>
                          <% } %>
                        </tbody>
                      </table>
                </div>
            </section>

            <section>
              <div class="container">
                  <div id="chart"></div>
              </div>
          </section>

    
    <script src="/javascripts/burguer.js"></script>
    <script src="/javascripts/d3.min.js"></script>
    <script src="/javascripts/c3.min.js"></script>
    <script src="/javascripts/charts.js"></script>
</body>

</html>